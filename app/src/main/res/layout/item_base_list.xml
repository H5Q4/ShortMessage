<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorThemeBg">

    <TextView
        android:id="@+id/indicatorTv"
        android:text="1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/selector_number_indicator_bg"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="14sp"/>


        <TextView
            android:id="@+id/nameTv"
            android:text="text1"
            android:layout_toEndOf="@id/indicatorTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_menu_bg"
            android:textColor="@color/selector_menu_text_color"
            android:textSize="18sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/extraTv"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:background="@drawable/selector_extra_info_bg"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:visibility="gone"
            android:text="æ— "
            android:textColor="@android:color/white"
            android:textSize="16sp"/>


</RelativeLayout>
